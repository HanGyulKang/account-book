# user table : 유저 테이블
create table user
(
    user_id  bigint auto_increment
        primary key,
    username varchar(255) null,
    password varchar(255) null,
    roles    varchar(255) null,
    token    varchar(255) null
);

create index index_user_username
    on user (username);


# account_book table : 가계부 테이블
create table account_book
(
    account_book_id        bigint auto_increment
        primary key,
    amount                 decimal(19, 2) default 0.00              null,
    deleted                int            default 0                 null,
    memo                   varchar(255)                             null,
    record_date            datetime       default CURRENT_TIMESTAMP not null,
    account_book_detail_id bigint                                   null,
    user_id                bigint                                   null,
    constraint FKd28tps1al2m2ltldpu68oxb27
        foreign key (account_book_detail_id) references account_book_detail (account_book_detail_id),
    constraint FKkquwu309cpmhm08oyl36f7wp2
        foreign key (user_id) references user (user_id)
);


# account_book_detail table : 가계부 상세 테이블
create table account_book_detail
(
    account_book_detail_id bigint auto_increment
        primary key,
    payment_date           datetime     null,
    payment_types          varchar(255) null,
    store_name             varchar(255) null
);